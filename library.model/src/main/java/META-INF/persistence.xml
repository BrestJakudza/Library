<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="libraryDBModel" transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<jta-data-source>java:/PostgresDS</jta-data-source>
		<class>pl.atena.library.model.Book</class>
		<class>pl.atena.library.model.Rent</class>
		<class>pl.atena.library.model.Reservation</class>
		<class>pl.atena.library.model.User</class>

		<properties>
			<property name="javax.presistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.presistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres" />
			<property name="javax.presistence.jdbc.user" value="postgres" />
			<property name="javax.presistence.jdbc.password" value="123" />
			<property name="javax.persistence.schema-generation.database.action" value="create-drop" />
			<!-- <property name="javax.persistence.sql-load-script-source" value="fileName.sql" /> -->

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="true" />
		</properties>
	</persistence-unit>
</persistence>
